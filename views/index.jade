extends layout
block content
  .SearchWidget.widget(data-widget="janus.SearchWidget")
    .row-fluid.search-bar
      h1= title
      p Welcome to Janus. Please enter a domain to scan for files.

      form.form-search
        input.search-query.span4(type="text", placeholder="ex:jplusplus.org")
        button.btn.do(href="#", data-action="search")
          | Search&nbsp;
          i.icon-search

    .row-fluid.search-results
      .result-holder
        pre
